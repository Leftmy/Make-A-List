@model MakeAList.Models.ListItem

@{
    ViewData["Title"] = "Add Item";
}

<h2>Add Item</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="UserListId" />

    <div class="form-group mb-3">
        <label asp-for="Text" class="form-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Url" class="form-label">URL (optional)</label>
        <input asp-for="Url" class="form-control"
               placeholder="https://example.com" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details"
       asp-controller="UserLists"
       asp-route-id="@Model.UserListId"
       class="btn btn-secondary ms-2">
        Cancel
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
