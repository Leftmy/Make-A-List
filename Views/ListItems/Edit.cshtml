@model MakeAList.Models.ListItem

<h2>Edit Item</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserListId" />

    <div class="mb-3">
        <label class="form-label">Text</label>
        <input asp-for="Text" class="form-control" />
    </div>

    <div class="mb-3">
        <input asp-for="IsDone" type="checkbox" /> Done
    </div>

    <button class="btn btn-primary">Save</button>
</form>
